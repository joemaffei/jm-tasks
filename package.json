{
  "name": "jm-tasks",
  "version": "0.1.0",
  "description": "A task management PWA built with Vue.js",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue,.mjs",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.vue,.mjs --fix",
    "format": "prettier --write \"**/*.{js,jsx,vue,mjs,json,css,scss}\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!.ai/**\" \"!node_modules/**\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!.ai/**\" \"!node_modules/**\"",
    "commit": "cz",
    "postinstall": "node -e \"if(process.version.match(/^v(1[89]|2[01])/)){console.error('Node.js 22+ required. Use nvm: nvm use');process.exit(1)}\"",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.md": [
      "markdownlint-cli2 --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "backlog.md": "^1.28.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.6.1",
    "vue-tsc": "^3.2.2"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "dexie": "^3.2.7",
    "vite": "^5.4.21",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vuedraggable": "^4.1.0",
    "zod": "^4.3.5"
  }
}
